{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Iniciar Todo (Docker)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "docker-compose.full.yml", "up", "--build", "-d"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "üõë Detener Todo (Docker)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "docker-compose.full.yml", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üìä Ver Logs (Docker)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "docker-compose.full.yml", "logs", "-f"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "üóÑÔ∏è Solo Base de Datos",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "build-backend",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/backend/v1.sln"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-backend",
      "command": "dotnet",
      "type": "process",
      "args": ["run", "--project", "${workspaceFolder}/backend/Web.API"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-frontend",
      "command": "ng",
      "type": "shell",
      "args": ["serve"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "start-database",
      "command": "docker-compose",
      "type": "shell",
      "args": ["up", "-d"],
      "options": {
        "cwd": "${workspaceFolder}/db"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "start-all",
      "dependsOrder": "sequence",
      "dependsOn": ["start-database", "run-backend", "run-frontend"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    }
  ]
}
